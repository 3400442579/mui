             xmlns:local="clr-namespace:DH.Editor"
              xmlns:loc="clr-namespace:Animation.Loc;assembly=Animation.Loc"
             StartupUri="CapturaWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/DH.MUI;component/Themes/Icons.xaml" />
