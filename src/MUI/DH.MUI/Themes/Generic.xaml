<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:DH.MUI.Controls"
                    >

    <ResourceDictionary.MergedDictionaries>
        
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.Window.xaml" />
        
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.ModernButton.xaml" />
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.SplitButton.xaml" />
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.DropDownButton.xaml" />
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.WindowCommands.xaml" />


        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.Ripple.xaml" />
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.PackIcon.xaml" />
        <ResourceDictionary Source="/DH.MUI;component/Themes/MT.ContentControlEx.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style BasedOn="{StaticResource MahApps.Styles.WindowCommandsItem}" TargetType="{x:Type local:WindowCommandsItem}" />
    <Style BasedOn="{StaticResource MahApps.Styles.WindowCommands}" TargetType="{x:Type local:WindowCommands}" />
    <Style BasedOn="{StaticResource MahApps.Styles.ContentControlEx}" TargetType="{x:Type local:ContentControlEx}" />

</ResourceDictionary>
